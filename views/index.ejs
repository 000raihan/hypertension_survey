                  <label class="" for="radio10">
                   <p style="width: max-content;">Systolic: 140 mmHg or higher</p>
                   <p style="width: max-content;">
                    Diastolic: 90 mmHg or higher
                   </p>
                  </label>
                </div>
                <div class="form-check select-1-1">
                  <input type="radio" class="form-check-input" id="radio11" name="q5" value="box_3" />
                  <label class="" for="radio11">
                   <p style="width: max-content;">Systolic: Higher than 180 mmHg</p>
                   <p style="width: max-content;">
                    Diastolic: Higher than 120 mmHg
                   </p>
                  </label>
                </div>
              </div>
